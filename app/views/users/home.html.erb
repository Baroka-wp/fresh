             <button class="fav-btn">
               <i class="fas fa-heart active"> 50 %</i>
             </button>
           </div>
         </div>
       </div>
       <div>
         <a href="/home/?id=<%=@currentData %>" class=" scroll scroll-right" id="scroll-right">
           <i class="fas fa-heart active"></i>
         </a>
       </div>
     </div>
     <div class="popup-container hidden" id="user-popup">
        <div class="popup">
          <button id="close-popup" class="close-popup"><i class="fas fa-times"></i></button>
            <%= image_tag @user.profil.url, id:"userProfile"%>
            <div class="right">
            <h1><%= @user.name %></h1>
            <div class="fav-btn">
              <i class="fas fa-heart active"> 50% </i> <small>de compatibilité avec <%= @user.name %></small>
            </div>
