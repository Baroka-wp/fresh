  <% if @currentData == 0 %>
  <div class="">
    <div id="container" class="userContainer">
       <div id="userShow" class="userShow">
           <div class=" userDetail">
           </div>
        </div>
    </div>
    <div class="popup-container" id="user-popup">
       <div class="popup">
         <a href="/home/?id=<%=@userData %>" id="close-popup" class="close-popup"><i class="fas fa-times"></i></a>
         <div class="user-info" id="user-info">
           <p>Vous avez tout vu</p>
         </div>
         </div>
      </div>
  </div>
  <footer>
    <p>© ︎ baroka 2021 - fresh</p>
  </footer>
</div>
  <% else %>
  <div class="bodyBag" id="bodyBag">
    <div id="container" class="userContainer">
       <a href="/home/?id=<%=@currentData%>"  class=" scroll scroll-left" id="scroll-left">
